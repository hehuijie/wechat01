/* pages/timeTable/timeTable.wxss */
@import'../../app.wxss';
page{
  background: #fff;
}
.teacherOwnSchool{
  text-align: center;
  margin-top: 30rpx;
}
.timeVal{
  position: relative;
  margin-bottom: 30rpx;
}
.timeVal icon.icon-icon-{
  font-size: 28rpx;
  margin-right: 15rpx;
}
.tabTimeCycle{
  display: flex;
  display: -webkit-flex;
  flex-direction: row column;
  width: 180rpx;
  height: 48rpx;
  border: 1rpx solid #eee;
  border-radius: 4rpx;
  position: absolute;
  right: 30rpx;
  top: 10rpx;
}
.tabTimeCycle view{
  width: 60rpx;
  line-height: 46rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
}
.tabTimeCycle view.on{
  color: #5099ff;
  background: #f6f6f6;
}

/* 课表 */
.timeTableDay{
  position: relative;
}
.trCourse{
  background:#f4f9f9;
  height: 80rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  flex-flow: wrap;
}
.trCourse .tdHour{
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background:#f4f9f9;
}
.trCourse .trCourseVal{
  width:160rpx;
  height: 80rpx;
  text-align: center;
}
.tr{
  height: 70rpx;
  border-bottom: 2rpx dashed #eee;
}
.tr .tdHour{
  width: 80rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background:#f4f9f9;
}
.tr .trCourseVal{
  width:160rpx;
  height: 70rpx;
  text-align: center;
}
/* 课程信息 */
.courseMsgBox{
  position: absolute;
  width: 150rpx;
  padding:10rpx 5rpx;
  border-radius: 8rpx;

}
.courseMsgBoxBg1{
  background: #de93b4
}
.courseMsgBoxBg2{
  background: #65bee6
}
.courseMsgBoxBg3{
  background: #b1a4dc
}
.courseMsgBoxBg4{
  background: #ebc272
}
.courseMsgBoxBg5{
  background: #65b69d
}
.courseMsgBoxBg6{
  background: #9bc552
}
.courseMsgBoxBg7{
  background: #799ae7
}
.weekBlockstyle{
  background: #81cff9;
}
.week-footer{
  height: 70rpx;
  line-height: 70rpx;
  text-indent: 30rpx;
  font-size: 24rpx;
  color: #333;
}
.onBlock,.onBlocking{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #fdaa4c;
}
.onBlocking{
  background: #f76a4f;
}