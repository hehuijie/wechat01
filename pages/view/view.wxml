<!-- 内容 -->
<view class="con-head">
  <text>{{headMessage}}</text>
</view>
<!-- 算数运算 -->
<view>{{a + b}} + {{c}} +d</view>
<view>hello {{name}}</view>
<button bindtap='changeName'>Click me!</button>
<view class='section'>
  <view class='section-title'>vertical scroll</view>
  <scroll-view scroll-y style='height:200px;' bindscrolltoupper='upper' bindscrolltolower='lower' bindscroll='scroll' scroll-into-view='{{toView}}' scroll-top='{{scrollTop}}'>
    <view id="green" class="scroll-view-item bc_green"></view>
    <view id="red"  class="scroll-view-item bc_red"></view>
    <view id="yellow" class="scroll-view-item bc_yellow"></view>
    <view id="blue" class="scroll-view-item bc_blue"></view>
  </scroll-view>
</view>
<view class='section'>
  <view class='section-title'>视图层-列表渲染</view>
  <view wx:for="{{array01}}">
    {{index}}: {{item.message}}
  </view>
  <view wx:for="{{array02}}">
  {{index}}:{{item}}
  </view>
  <view wx:for="{{array03}}" wx:for-index="idx" wx:for-item="itemName">
  {{idx}}:{{itemName.message}}
  </view>
  <view wx:for="{{[1, 2, 3, 4, 5, 6, 7, 8, 9]}}" wx:for-item="i">
  <view wx:for="{{[1, 2, 3, 4, 5, 6, 7, 8, 9]}}" wx:for-item="j">
    <view wx:if="{{i <= j}}">
      {{i}} * {{j}} = {{i * j}}
    </view>
  </view>
</view>
</view>
<view class='section'>
  <view class='section__title'>flex-direction:row</view>
  <view class='flex-wrp' style='flex-direction:row'>
    <view class='flex-item bc_green'>1</view>
    <view class='flex-item bc_red'>2</view>
    <view class='flex-item bc_blue'>3</view>
  </view>
</view>
<view class='section'>
  <view class='section__title'>flex-direction:row</view>
  <view class='flex-wrp' style='flex-direction:column'>
    <view class='flex-item bc_green'>1</view>
    <view class='flex-item bc_red'>2</view>
    <view class='flex-item bc_blue'>3</view>
  </view>
</view>
<block wx:for="{{[1,2,3]}}">
  <view>{{index}}:</view>
  <view>{{item}}</view>
</block>
<view class='section'>
  <view class='section__title'>wx:key</view>
  <switch wx:for="{{objectArray}}" wx:key="unq">{{item.id}}</switch>
  <button bindtap='switch'>Switch</button>
  <button bindtap='addToFront'>Add to the front</button>

  <switch wx:for="{{numberArray}}" wx:key="*this" style='display:block;'>{{item}}</switch>
  <button bindtap='addNumberToFront'>Add to the front</button>
</view>
<view class='section'>
  <view class='section__title'>wx:if</view>
  <view wx:if="{{num > 9}}">10</view>
  <view wx:elif="{{num >5 && num < 6}}">4</view>
  <view wx:else>0</view>
  <button bindtap='changeNum'>change num</button>
</view>
<view class='section'>
  <view class='section-title'>wxs 模块</view>
  <wxs src="../tool.wxs" module="tool"/>
  <view>{{tool.msg}}+{{tool.msg02}}</view>
  <view>{{tool.BAR}}</view>
  <view>{{tool.BAR}}+{{tool.FOO}}</view>
</view>