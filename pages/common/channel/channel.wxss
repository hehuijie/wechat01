@import'../../../app.wxss';
page{
  background: #fff;
}
.channel_tab{
  width: 690rpx;
  padding:0rpx 30rpx;
  height: 98rpx;
  border-bottom: 2rpx solid #eee;
  justify-content: space-between;
}
.channel_title{
  width: 130rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  border-bottom: 4rpx solid #fff
}
.tit_on{
  color: #5099ff;
  border-bottom-color:#5099ff;
}
.channel_box{
  width: 720rpx;
  padding-left: 30rpx;
}
.channel_item{
  height: 78rpx;
  line-height: 78rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 28rpx;
  color: #333;
  position: relative;
}
.channel_item icon{
  position: absolute;
  right: 40rpx;
  top: 5rpx;
  color: #fff;
  font-size: 36rpx;
} 
.item_on{
  color: #5099ff
}
.item_on icon{
  color: #5099ff
}
.footerBtn{
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  border-top: 2rpx solid #eee;
  height: 118rpx;
}
.submitAction{
  width: 690rpx;
  height: 80rpx;
  margin: 20rpx 30rpx;
  background: #5099ff;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 8rpx;
  box-shadow: 0rpx 0rpx 10rpx #5099ff;
}